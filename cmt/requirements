package pointlike

version v4r3p2

# $Header: /nfs/slac/g/glast/ground/cvs/pointlike/cmt/requirements,v 1.41 2008/01/25 01:36:25 burnett Exp $

use astro *
use healpix *
use embed_python *


apply_pattern shared_library

path_remove PYTHONPATH pointlike
path_prepend PYTHONPATH $(POINTLIKEROOT)/python;$(POINTLIKEROOT)/$(BINDIR)

private

########### for SWIG ###########
#use SwigPolicy v*
path_remove PYTHONPATH pointlike
path_prepend PYTHONPATH $(POINTLIKEROOT)/python;$(POINTLIKEROOT)/$(BINDIR)
#macro swig_module pointlike
# macro swig_begin "" 
# macro swig_end ""


macro source "*.cxx" WIN32 "*.cxx *.h *.py"

library pointlike \
 -s=../pointlike $(source) \
 -s=../src $(source) 

# fitting application, 
application pointfit -s=pointfit $(source) -s=../python pointfit_setup.py


#souce-finding application
application pointfind -s=pointfind $(source) -s=../python pointfind_setup.py


application test_pointlike -s=test $(source)

# convenient setup alias using DOSKEY for Windows version
setup_script alias
