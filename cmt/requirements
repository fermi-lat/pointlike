package pointlike

version v3r0

# $Header: /nfs/slac/g/glast/ground/cvs/pointlike/cmt/requirements,v 1.23 2007/11/18 22:56:55 burnett Exp $

use STpolicy *
use astro *
#use map_tools *
use embed_python *
use SwigPolicy v*

path_remove PYTHONPATH py_point
path_prepend PYTHONPATH $(POINTLIKEROOT)/python;$(POINTLIKEROOT)/$(BINDIR)

apply_pattern swig_module name="py_point"

path_append PATH "$(SWIG_dir)/bin"

apply_pattern package_include
private
apply_pattern ST_library option=-no_share

macro source "*.cxx" WIN32 "*.cxx *.h *.py"

# fitting application, 
application pointfit -s=pointfit $(source) -s=../python pointfit_setup.py


#souce-finding application
application pointfind -s=pointfind $(source) -s=../python pointfind_setup.py

# convenient setup alias using DOSKEY for Windows version
setup_script alias
